#!/bin/sh

JAVA=$1

for i in \
 appletviewer \
 extcheck \
 idlj \
 jar \
 jarsigner \
 java \
 javac \
 javadoc \
 javah \
 javap \
 jconsole \
 jdb \
 jhat \
 jinfo \
 jmap \
 jps \
 jrunscript \
 jsadebugd \
 jstack \
 jstat \
 jstatd \
 native2ascii \
 rmic \
 schemagen \
 serialver \
 wsgen \
 wsimport \
 xjc
do
  oldpath=`update-alternatives --query $i | grep ^Best | awk '{print $2}'`
  sudo update-alternatives --remove $i $oldpath
  sudo update-alternatives --install /usr/bin/$i $i /usr/lib/jvm/$JAVA/bin/$i 1
done
