#!/bin/bash

unset GNOME_KEYRING_CONTROL
unset GNOME_KEYRING_PID

mktmp () {
  if [[ $OS == "Darwin" ]]; then
    mktemp -t /tmp
  else
    mktemp
  fi
}

msmtp=msmtp
tmp=$(mktmp)
cat >$tmp
x=$(egrep -o "^X-MSMTP: .*" $tmp)

if [ $? -eq 0 ]; then
  acct=$(echo $x | cut -d: -f2)
  msmtp="$msmtp -a$acct"
fi

$msmtp "$@" <$tmp && rm $tmp
