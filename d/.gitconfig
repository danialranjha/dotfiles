[user]
name = Drew Raines
email = aaraines@gmail.com

[alias]
ci = commit
co = checkout
st = status
b = branch
ver = "!git log --pretty=format:'%ai %h' -1 | perl -pe 's,(\\d\\d\\d\\d)-(\\d\\d)-(\\d\\d) (\\d\\d):(\\d\\d):(\\d\\d) [^ ]+ ([a-z0-9]+),\\1\\2\\3+\\7,'"
pr = "!f() { git fetch origin pull/$1/head:pull/$1; }; f"

[apply]
whitespace = strip

[diff]
color = auto
rename = copy 

[push]
default = tracking

[pager]
color = true 

[status]
color = auto

